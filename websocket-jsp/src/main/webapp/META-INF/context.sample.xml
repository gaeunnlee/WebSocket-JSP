<?xml version="1.0" encoding="UTF-8"?>
<Context>
  <Resource
      name="jdbc/oracle"
      auth="Container"
      type="javax.sql.DataSource"
      driverClassName="oracle.jdbc.OracleDriver"
      url="jdbc:oracle:thin:@localhost:1521:XE"
      username="YOUR_DB_USER"
      password="YOUR_DB_PASSWORD"
      maxTotal="50"
      maxIdle="10"
      maxWaitMillis="10000"
  />
</Context>
